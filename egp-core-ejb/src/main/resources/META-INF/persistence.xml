<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
             http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">

    <!-- Legacy JPA 1.0 persistence unit -->
    <persistence-unit name="egp-pu" transaction-type="JTA">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        
        <!-- JTA Data Source (configured in application server) -->
        <jta-data-source>java:/jdbc/EgpDS</jta-data-source>
        
        <!-- Entity classes -->
        <class>com.legacy.egp.entity.Customer</class>
        <class>com.legacy.egp.entity.CaseRecord</class>
        <class>com.legacy.egp.entity.Note</class>
        
        <!-- Legacy: exclude-unlisted-classes was not available in JPA 1.0 -->
        
        <properties>
            <!-- Hibernate specific properties (legacy versions) -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
            
            <!-- Legacy: Connection pool settings (now handled by app server) -->
            <property name="hibernate.connection.pool_size" value="10"/>
            
            <!-- Cache settings (legacy Hibernate cache) -->
            <property name="hibernate.cache.use_second_level_cache" value="true"/>
            <property name="hibernate.cache.use_query_cache" value="true"/>
            <property name="hibernate.cache.provider_class" value="org.hibernate.cache.EhCacheProvider"/>
            
            <!-- Legacy: Transaction settings -->
            <property name="hibernate.transaction.manager_lookup_class" 
                      value="org.hibernate.transaction.JBossTransactionManagerLookup"/>
            
            <!-- JDBC batch settings -->
            <property name="hibernate.jdbc.batch_size" value="25"/>
            <property name="hibernate.order_inserts" value="true"/>
            <property name="hibernate.order_updates" value="true"/>
            
            <!-- Legacy: Statistics for monitoring -->
            <property name="hibernate.generate_statistics" value="true"/>
        </properties>
    </persistence-unit>
    
    <!-- Alternative persistence unit for WebLogic -->
    <persistence-unit name="egp-pu-weblogic" transaction-type="JTA">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <jta-data-source>jdbc/EgpDS</jta-data-source>
        
        <class>com.legacy.egp.entity.Customer</class>
        <class>com.legacy.egp.entity.CaseRecord</class>
        <class>com.legacy.egp.entity.Note</class>
        
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <property name="hibernate.show_sql" value="false"/>
            
            <!-- WebLogic specific transaction manager -->
            <property name="hibernate.transaction.manager_lookup_class" 
                      value="org.hibernate.transaction.WeblogicTransactionManagerLookup"/>
        </properties>
    </persistence-unit>
</persistence>