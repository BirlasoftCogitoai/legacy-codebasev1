<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
         http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <display-name>Legacy EGP Portal Application</display-name>
    <description>Legacy Java EE Web Application for Enterprise Government Portal</description>

    <!-- Legacy: Context parameters -->
    <context-param>
        <param-name>application.version</param-name>
        <param-value>1.0.0-SNAPSHOT</param-value>
    </context-param>
    
    <context-param>
        <param-name>application.environment</param-name>
        <param-value>development</param-value>
    </context-param>
    
    <!-- Legacy: Session timeout (30 minutes) -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- Legacy: Authentication Filter -->
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>com.legacy.egp.web.AuthFilter</filter-class>
        <init-param>
            <param-name>excludePatterns</param-name>
            <param-value>/login.jsp,/styles.css,/images/*,/js/*</param-value>
        </init-param>
    </filter>
    
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Legacy: Login Servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.legacy.egp.web.LoginServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Legacy: Profile Servlet -->
    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>com.legacy.egp.web.ProfileServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>

    <!-- Legacy: Case Management Servlet -->
    <servlet>
        <servlet-name>CaseServlet</servlet-name>
        <servlet-class>com.legacy.egp.web.CaseServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>CaseServlet</servlet-name>
        <url-pattern>/cases</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>CaseServlet</servlet-name>
        <url-pattern>/case/*</url-pattern>
    </servlet-mapping>

    <!-- Legacy: Welcome file list -->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Legacy: Error pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>
    
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>
    
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/error/general.jsp</location>
    </error-page>

    <!-- Legacy: Security constraints (basic) -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Admin Pages</web-resource-name>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- Legacy: Security roles -->
    <security-role>
        <role-name>user</role-name>
    </security-role>
    
    <security-role>
        <role-name>supervisor</role-name>
    </security-role>
    
    <security-role>
        <role-name>admin</role-name>
    </security-role>

    <!-- Legacy: Resource references -->
    <resource-ref>
        <res-ref-name>jdbc/EgpDS</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    
    <!-- Legacy: EJB references -->
    <ejb-local-ref>
        <ejb-ref-name>ejb/CustomerBean</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>com.legacy.egp.ejb.CustomerBeanLocal</local>
    </ejb-local-ref>
    
    <ejb-local-ref>
        <ejb-ref-name>ejb/CaseBean</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>com.legacy.egp.ejb.CaseBeanLocal</local>
    </ejb-local-ref>

</web-app>